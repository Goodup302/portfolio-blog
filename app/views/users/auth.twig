{% extends template %}

{% block content %}
    <section class="s-content s-content--top-padding s-content--narrow">
        <div class="row entries-wrap wide">
            {{ alert.show() }}
            {% import component~'button.twig' as Button %}

            <div class="col-md-12">
                <div class="row narrow">
                    <div class="col-full s-content__header" data-aos="fade-up">
                        <h1 class="display-1 display-1--with-line-sep">Authentification</h1>
                        <p class="lead">Veuillez remplir tous les champs du formulaire ci dessous</p>
                    </div>
                </div>
                <form action="index.php?p=auth&action={{ action }}" method="post">
                    {{ form.show() }}
                    {% if action == "login" %}
                        {{ Button.show("S'enregistrer", 'primary', 'index.php?p=auth&action=register') }}
                    {% elseif action == "register" %}
                        {{ Button.show("Renvoyer confirmation", 'primary', 'index.php?p=auth&action=confirm') }}
                    {% endif %}
                </form>
            </div>

        </div>
    </section>

{% endblock %}
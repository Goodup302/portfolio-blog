{% extends template %}

{% block content %}
    <section class="s-content s-content--top-padding s-content--narrow">
        <div class="row narrow">
            <div class="col-full s-content__header" data-aos="fade-up">
                <h1 class="display-1 display-1--with-line-sep">Tout les articles</h1>
            </div>
        </div>
        <div class="row entries-wrap wide">
                <div class="entries">
                    {% for post in posts %}
                        <article class="col-block">

                            <div class="item-entry" data-aos="zoom-in">
                                <div class="item-entry__thumb">
                                    <a href="{{ post.url }}" class="item-entry__thumb-link">
                                        <img src="{{ post.image }}">
                                    </a>
                                </div>

                                <div class="item-entry__text">
                                    <h1 class="item-entry__title"><a href="{{ post.url }}">{{ post.title }}</a></h1>
                                    <p>{{ post.getExcerpt() }}</p>
                                    <div class="item-entry__date">
                                        <span>{{ post.getLastdate() }}</span>
                                    </div>
                                </div>
                            </div> <!-- item-entry -->

                        </article> <!-- end article -->
                    {% endfor %}
                </div>
        </div>
    </section>
{% endblock %}